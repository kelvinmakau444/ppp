<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@android:color/darker_gray"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<Button
    android:padding="20dp"
    android:text="Stew"
    android:layout_margin="2dp"
    android:id="@+id/btn_stew"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <Button
            android:padding="20dp"
            android:text="Starch"
            android:layout_margin="2dp"
            android:id="@+id/btn_starch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:padding="20dp"
            android:text="Combo"
            android:layout_margin="2dp"
            android:id="@+id/btn_combo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:padding="20dp"
            android:text="Snacks"
            android:layout_margin="2dp"
            android:id="@+id/btn_snacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:padding="20dp"
            android:text="Cold drinks"
            android:layout_margin="2dp"
            android:id="@+id/btn_cold_drinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:padding="20dp"
            android:text="Hot drinks"
            android:layout_margin="2dp"
            android:id="@+id/btn_hot_drinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:padding="20dp"
            android:text="Salads"
            android:layout_margin="2dp"
            android:id="@+id/btn_salads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/foodlistRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>